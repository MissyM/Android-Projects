<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_navegacion3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAzulCielo"
    android:orientation="vertical"
    tools:context="com.httpmilenacabrera.guia6.Navegacion3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnuno"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="verde"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@color/colorVerde"
        android:layout_marginRight="40dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtuno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="Texto Uno"
        android:layout_toRightOf="@id/btnuno"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btndos"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="amarillo"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginRight="40dp"
            android:background="@color/colorAmarillo"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtdos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="Texto Dos"
            android:layout_toRightOf="@id/btndos"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btntres"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Rojo"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginRight="40dp"
            android:background="@color/colorAccent"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txttres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="Texto Uno"
            android:layout_toRightOf="@id/btntres"/>
    </LinearLayout>
</LinearLayout>
