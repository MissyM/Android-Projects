<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="?attr/colorControlActivated"
        android:id="@+id/card_contacto" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/img_contacto"
                android:src="@mipmap/contacto1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:padding="20dp"
                android:layout_alignParentLeft="true"/>
            <LinearLayout
                android:id="@+id/text"
                android:layout_alignLeft="@id/img_contacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_nombre"
                    android:layout_width="255dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:text="Maria Perez"/>
                <TextView
                    android:id="@+id/txt_telefono"
                    android:layout_width="255dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:text="3216763940"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
