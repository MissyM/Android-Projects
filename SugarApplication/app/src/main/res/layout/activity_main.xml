<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorAzul"
    tools:context="com.milenacabrera.sugarapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:text="Registro de Datos"
        android:layout_marginLeft="25dp"
        android:textSize="35sp"
        android:textColor="@color/colorAmarillo"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/editT_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorAmarillo"
        android:hint="@string/nombre"/>


    <EditText
        android:id="@+id/editT_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorAmarillo"
        android:hint="@string/apellido"/>

    <EditText
        android:id="@+id/editT_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorAmarillo"
        android:hint="@string/direcci_n"/>

    <EditText
        android:id="@+id/editT_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorAmarillo"
        android:hint="@string/tel_fono"
        android:inputType="phone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAmarillo"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:onClick="verLista"
            android:text="@string/ver_lista" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAmarillo"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:layout_below="@+id/editT_phone"
            android:onClick="guardar"
            android:text="@string/guardar" />
    </LinearLayout>
</LinearLayout>
